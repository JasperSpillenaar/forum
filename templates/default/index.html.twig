{% extends 'base.html.twig' %}
    {% block body %}
        <style>
            .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        </style>

        <div class="container">
        {% for post in allpost %}
            <div class="row my-5">
                <div class="col-md-7">
                    <a href="#">
                        <img style="height: 350px; width: 700px; " class="img-fluid rounded mb-3 mb-md-0" src="{{ vich_uploader_asset(post, 'imageFile')}}" height="300" width="700" alt="">
                    </a>
                </div>
                <div class="col-md-5">
                    <h2>{{ post.Title }}</h2>
                    <h5>{{ post.Body|length > 100 ? post.body|slice(0, 100) ~ '...' : post.body }} </h5>
                    <a class="btn btn-primary" href="/form/{{ post.id }}">View Project</a>
                </div>
            </div>
            <hr>
        {% endfor %}
        </div>
{% endblock %}
